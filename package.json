{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "author": {
    "email": "caulagi@gmail.com",
    "name": "Pradip Caulagi",
    "url": "https://caulagi.com"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "license": "MIT",
  "scripts": {
    "build": "run-s build:*",
    "build:bsb": "bsb -make-world",
    "build:config": "run-s build:config:*",
    "build:config:browser": "echo 'import \"./src/styles/global.bs.js\"' > gatsby-browser.js",
    "build:config:config": "rio -o gatsby-config.js src/config/gatsby.re",
    "build:gatsby": "gatsby build",
    "clean": "bsb -clean-world && rimraf .cache .merlin lib public *.js static/js",
    "dev": "run-p dev:*",
    "dev:bsb": "npm run build:bsb -w",
    "dev:gatsby": "gatsby develop",
    "format": "bsrefmt --in-place src/**/**.re src/**/__tests__/**.re",
    "jest": "jest",
    "lh": "lighthouse-ci",
    "predev:gatsby": "npm run build:config",
    "prejest": "rio -o babel.config.js src/config/babel.re",
    "pretest": "npm run build:bsb",
    "serve": "gatsby serve",
    "test": "npm run jest"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@glennsl/bs-jest": "^0.5.1",
    "@moox/bs-react-helmet": "^2.1.0",
    "@wyze/gatsby-plugin": "^1.0.0",
    "@wyze/rio": "^1.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.4.0",
    "bs-css": "https://github.com/SentiaAnalytics/bs-css#8b516f628bdf8a56bcffafc0849e6f49deab645b",
    "bs-jest-dom": "^2.0.1",
    "bs-platform": "^7.2.2",
    "bs-react-test-renderer": "^2.0.0",
    "bs-react-testing-library": "^0.6.0",
    "gatsby": "^2.20.36",
    "gatsby-plugin-manifest": "^2.3.7",
    "gatsby-plugin-offline": "^3.1.4",
    "gatsby-plugin-react-helmet": "^3.2.4",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-source-filesystem": "^2.2.4",
    "husky": "^4.2.5",
    "jest-dom": "^4.0.0",
    "lighthouse-ci": "^1.10.0",
    "lint-staged": "^10.1.7",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "reason-react": "^0.7.1",
    "rimraf": "^3.0.2"
  },
  "browserslist": [
    "cover 99.5%"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ishakuni/frontend"
  },
  "bugs": {
    "url": "https://github.com/ishakuni/frontend/issues"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@ahrefs/bs-dotenv|@glennsl/bs-jest|@moox/bs-react-helmet|bs-|reason-react))"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.re": [
      "bsrefmt --in-place",
      "git add"
    ]
  }
}
